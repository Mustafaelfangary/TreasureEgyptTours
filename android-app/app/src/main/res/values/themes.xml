<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.DahabiyatNileCruise" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material Design Color System -->
        <item name="colorPrimary">@color/ocean_blue</item>
        <item name="colorPrimaryVariant">@color/ocean_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/deep_blue</item>
        <item name="colorSecondaryVariant">@color/deep_blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/ocean_blue</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Window properties -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.DahabiyatNileCruise.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#0B2E4F</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.DahabiyatNileCruise</item>
    </style>

    <!-- Window animation style -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Button styles -->
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/ocean_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <style name="Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/ocean_blue</item>
        <item name="android:textColor">@color/ocean_blue</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

    <!-- Card styles -->
    <style name="Card.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background_light</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Text styles -->
    <style name="Text.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <!-- Toolbar style -->
    <style name="Toolbar.Primary" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/ocean_blue</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark</item>
    </style>
</resources>
