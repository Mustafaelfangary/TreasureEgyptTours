// Add these models to your existing prisma/schema.prisma file

model DepartureSchedule {
  id           String            @id @default(cuid())
  dahabiya     String
  route        String
  duration     String
  departure    String
  availability AvailabilityType  @default(Available)
  priceFrom    String            @map("price_from")
  description  String?
  sortOrder    Int               @default(0) @map("sort_order")
  isActive     Boolean           @default(true) @map("is_active")
  createdAt    DateTime          @default(now()) @map("created_at")
  updatedAt    DateTime          @updatedAt @map("updated_at")

  @@map("departure_schedule")
  @@index([isActive])
  @@index([sortOrder])
}

model SeasonalRate {
  id               String   @id @default(cuid())
  season           String
  period           String
  cabinType        String   @map("cabin_type")
  singleOccupancy  String   @map("single_occupancy")
  doubleOccupancy  String   @map("double_occupancy")
  suitePrice       String?  @map("suite_price")
  notes            String?
  sortOrder        Int      @default(0) @map("sort_order")
  isActive         Boolean  @default(true) @map("is_active")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  @@map("seasonal_rate")
  @@index([isActive])
  @@index([season])
  @@index([sortOrder])
}

model InclusionItem {
  id          String           @id @default(cuid())
  category    InclusionType
  title       String
  description String
  icon        String?
  sortOrder   Int              @default(0) @map("sort_order")
  isActive    Boolean          @default(true) @map("is_active")
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")

  @@map("inclusion_item")
  @@index([isActive])
  @@index([category])
  @@index([sortOrder])
}

enum AvailabilityType {
  Available
  Limited
  Full
}

enum InclusionType {
  Included
  Excluded
  Optional
}
